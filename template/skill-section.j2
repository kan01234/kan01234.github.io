{% macro skill_section(skill) %}
<section id="{{ skill.key }}" class="main special">
    <header class="major">
        <h2>{{ skill.title }}</h2>
    </header>
    <ul class="features">
        {% for item in skill.list %}
            <li>
                <span class="icon solid major style{{ loop.index % 5 + 1 }} {{ item.icon }}"></span>
                <h3>{{ item.value }}</h3>
                <p>{{ item.label }}</p>
            </li>
        {% endfor %}
    </ul>
    <footer class="major">
        {% if skill.link %}
        <ul class="actions special">
            <li><a href="generic.html" class="button">Learn More</a></li>
        </ul>
        {% endif %}
    </footer>
</section>
{% endmacro %}